local tomoauto = require('tomoauto')
local yalgo = require('yalgo')
local io, os = io, os
local assert, ipairs, pairs = assert, ipairs, pairs

_ENV = nil

local parser = yalgo:new_parser('Print MRC extended header to stdout.')

parser:add_argument({
  name = 'input',
  description = 'Input tilt-series to get extended header.',
  meta_value = 'INPUT.st',
  is_positional = true,
  is_required = true
})

local options = parser:get_arguments()

assert(tomoauto.utils.is_file(options.input))
local input_MRC = assert(tomoauto.mrcio.new_MRC(options.input))

if not input_MRC.extended_header then
  os.exit(1)
else
  for i, section in ipairs(input_MRC.extended_header) do
    io.stdout:write('[Z = ' .. i .. ']\n')

    for field, value in pairs(section) do
      io.stdout:write('\t' .. field .. ':\t\t' .. value .. '\n')
    end

    io.stdout:write('\n')
  end

  os.exit(0)
end
-- vim: set ft=lua tw=80 ts=8 sts=2 sw=2 noet :
