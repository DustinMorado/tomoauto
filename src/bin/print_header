local tomoauto = require('tomoauto')
local yalgo = require('yalgo')
local io, os = io, os
local assert, ipairs = assert, ipairs

_ENV = nil


local parser = yalgo:new_parser('Print MRC header to stdout.')

parser:add_argument({
  name = 'input',
  description = 'Input tilt-series to get header.',
  meta_value = 'INPUT.st',
  is_positional = true,
  is_required = true
})

local options = parser:get_arguments()

assert(tomoauto.utils.is_file(options.input))
local input_MRC = assert(tomoauto.mrcio.new_MRC(options.input))

local header_fields = {
  'nx', 'ny', 'nz',
  'mode',
  'nxstart', 'nystart', 'nzstart',
  'mx', 'my', 'mz',
  'xlen', 'ylen', 'zlen',
  'alpha', 'beta', 'gamma',
  'mapc', 'mapr', 'maps',
  'amin', 'amax', 'amean',
  'ispg',
  'Next',
  'dvid',
  'extra_1',
  'extType',
  'nversion',
  'extra_2',
  'nint', 'nreal',
  'extra_3',
  'imodStamp', 'imodFlags',
  'idtype', 'lens',
  'nd1', 'nd2', 'vd1', 'vd2',
  'tiltAngles_1', 'tiltAngles_2', 'tiltAngles_3',
  'tiltAngles_4', 'tiltAngles_5', 'tiltAngles_6',
  'xorg', 'yorg', 'zorg',
  'cmap', 'stamp', 'rms', 'nlabl',
  'labels_1', 'labels_2', 'labels_3', 'labels_4', 'labels_5',
  'labels_6', 'labels_7', 'labels_8', 'labels_9', 'labels_10'
}

for _, field in ipairs(header_fields) do
  io.stdout:write(field .. ':\t\t' .. input_MRC.header[field] .. '\n')
end

os.exit(0)
