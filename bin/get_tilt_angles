#!/usr/bin/env lua
--- Gets the tilt angles from the extended-header of a tilt series.
--
-- This program prints the tilt angles from the header or .mdoc file to the
-- screen or an output file. It can be used to generate the '.rawtlt' file used
-- in various IMOD programs.
--
-- Dependencies: `MRC_IO_lib`
--
-- @script get_tilt_angles
-- @author Dustin Morado
-- @license GPLv3
-- @release 0.2.10

local tomoauto_directory = os.getenv('TOMOAUTOROOT')
package.path = package.path .. ';' .. tomoauto_directory .. '/lib/?.lua;'

local MRC_IO_lib = require 'MRC_IO_lib'

--- Gets the tilt angles from the extended header of a tilt series.
-- prints the tilt angles from the header or .mdoc file to the screen or an
-- output file.
-- @param input_filename Input image stack filename e.g. 'image.st'
-- @param output_filename [optional] Output filename e.g.'image.rawtlt'
function get_tilt_angles(input_filename, output_filename)
   MRC_IO_lib.get_tilt_angles(input_filename, output_filename)
end

if not arg[1] then
   print('\nUsage: get_tilt_angles <image.st> [image.rawtlt]\n\n')
   os.exit(0)
end

local status, err = pcall(get_tilt_angles, arg[1], arg[2])
if not status then
   io.stderr:write(err)
   os.exit(1)
else
   os.exit(0)
end
